{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "model/*": ["src/model/*"],
      "hooks/*": ["src/hooks/*"],
      "utils/*": ["src/utils/*"],
      "enums/*": ["src/enums/*"],
      "symbols/*": ["src/symbols/*"]
    },
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2019",
      "dom",
      "scripthost"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ]
  }
}
